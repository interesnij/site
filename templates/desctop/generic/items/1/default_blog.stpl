<% let (__desc, __read) = match linguage {
      2 => (object.get_en_description(), "Read"), 
      1 | _ => (object.get_ru_description(), "Ð§Ð¸Ñ‚Ð°Ñ‚ÑŒ"),
  };
%>

<div class="col-lg-4 col-md-6 mb-md-50">
    <div class="post-prev-img">
      <a href="/blog/all-articles/<%= object.slug %>/" class="ajax">
        <div class="progressive replace" data-href="<%= object.get_image() %>">
          <img class="preview image_fit_300" src="/static/images/i.webp" alt="img" />
        </div>
      </a>
    </div>
    <div class="post-prev-title font-alt">
        <a class="ajax" href="/blog/all-articles/<%= object.slug %>/">
          <% if !object.is_active { %>
            <span style="color: red">ðŸ›‡</span>
          <% } %>
          <%= object.title %>
        </a>
    </div>
    <div class="post-prev-info font-alt">
      <%= object.created.format("%d-%m-%Y Ð² %H:%M").to_string() %>
    </div>
    <div class="post-prev-text">
      <%= __desc %>
    </div>
    <div class="post-prev-more">
        <a href="/blog/all-articles/<%= object.slug %>/" class="btn btn-mod border btn-round ajax"><%= __read %></a>
    </div>
</div>
